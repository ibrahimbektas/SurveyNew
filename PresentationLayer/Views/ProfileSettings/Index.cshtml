@model CreatorEditDto

@{
    //ProfileSettings
    ViewData["Title"] = "Index";
    Layout = "~/Views/CreatorLayout/Index.cshtml";
}

<div class="col-lg-6">
    <div class="card">
        <div class="card-header">
            <strong>Kullanıcı Bilgilerini Güncelle</strong>
        </div>
        <div class="card-body card-block">
            <form method="post" enctype="multipart/form-data" class="form-horizontal" novalidate>
                <div class="row form-group">
                    <div class="col col-md-3">
                        <label class=" form-control-label">Kullanıcı Adı:</label>
                    </div>
                    <div class="col-12 col-md-9">
                        <p class="form-control-static">Username</p>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-3">
                        <label for="text-input" class=" form-control-label">Adınız:</label>
                    </div>
                    <div class="col-12 col-md-9">
                        <input type="text" asp-for="Name" class="form-control">
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-3">
                        <label for="text-input" class=" form-control-label">Soyadınız:</label>
                    </div>
                    <div class="col-12 col-md-9">
                        <input type="text" asp-for="Surname" class="form-control">
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-3">
                        <label for="email-input" class=" form-control-label">Email Adresiniz:</label>
                    </div>
                    <div class="col-12 col-md-9">
                        <input type="email" id="email-input" asp-for="Email" class="form-control">
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-3">
                        <label for="password-input" class=" form-control-label">Şifreniz:</label>
                    </div>
                    <div class="col-12 col-md-9">
                        <input type="password" asp-for="Password" class="form-control">
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-3">
                        <label for="password-input" class=" form-control-label">Şifre Tekrar:</label>
                    </div>
                    <div class="col-12 col-md-9">
                        <input type="password" asp-for="ConfirmPassword" class="form-control">
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-3">
                        <label asp-for="ProfilePicture" class=" form-control-label">Profil Resmi Yükle:</label>
                    </div>
                    <div class="col-12 col-md-9">
                        <input type="file" asp-for="ProfilePicture" class="form-control-file">
                    </div>
                </div>
                <div class="card-footer">
                    <button type="reset" class="btn btn-danger btn-sm">
                        <i class="fa fa-ban"></i> Vazgeç
                    </button>
                    <button type="submit" class="btn btn-primary btn-sm">
                        <i class="fa fa-dot-circle-o"></i> Güncelle
                    </button>
                </div>
            </form>
        </div>
        
    </div>
</div>
